@page
@model ToolsLocation.Pages.Tools.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tool</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tool.ToolId" />
            <div class="form-group">
                <label asp-for="Tool.Name" class="control-label"></label>
                <input asp-for="Tool.Name" class="form-control" />
                <span asp-validation-for="Tool.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.Brand" class="control-label"></label>
                <input asp-for="Tool.Brand" class="form-control" />
                <span asp-validation-for="Tool.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.Model" class="control-label"></label>
                <input asp-for="Tool.Model" class="form-control" />
                <span asp-validation-for="Tool.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.LocationId" class="control-label"></label>
                <select asp-for="Tool.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="Tool.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
